package com.digitalwallet.backend.model;

import jakarta.persistence.*;
import java.math.BigDecimal;
import java.time.Instant;
import java.util.UUID;

@Entity
@Table(name = "payment_requests")
public class PaymentRequest {

    @Id
    @Column(columnDefinition = "BINARY(16)")
    private UUID id;

    @Column(nullable = false, unique = true, length = 36)
    private String token; // uuid string

    @Column(nullable = false, precision = 19, scale = 4)
    private BigDecimal amount;

    @Column(nullable = false)
    private String currency;

    @Column(nullable = false, columnDefinition = "BINARY(16)")
    private UUID toWalletId; // recipient wallet id (optional) or user id

    @Column(nullable = false)
    private Instant createdAt;

    public PaymentRequest() {}

    // getters / setters (omitted in this snippet for brevity in message)
    // implement all standard getters/setters for the fields
}
